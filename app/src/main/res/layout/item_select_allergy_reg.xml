<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:background="#00cfcfcf"
    android:padding="3dp">

    <LinearLayout
        android:layout_width="0dp"

        android:layout_height="wrap_content"
        android:layout_weight="1">

        <CheckBox
            android:id="@+id/cbAllergy"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/allergyimg"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:layout_marginLeft="1dp"
            android:background="@color/colorPrimary"
            android:padding="3dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp" />

        <TextView
            android:id="@+id/cbAllergy1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="1dp"
            android:paddingLeft="5dp"
            android:layout_gravity="center"
            android:text="New CheckBox"
            android:textColor="#427712"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/rd_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Low"
        android:visibility="gone" />

    <RadioGroup
        android:id="@+id/radioS"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <RadioButton
            android:id="@+id/radioMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_low"
            android:textSize="8sp" />

        <RadioButton
            android:id="@+id/radioFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_medium"
            android:textSize="8sp" />

        <RadioButton
            android:id="@+id/radiohigh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_high"

            android:textSize="8sp" />

    </RadioGroup>


</LinearLayout>
